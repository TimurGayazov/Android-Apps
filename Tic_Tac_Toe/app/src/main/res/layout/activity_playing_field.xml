<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".playing_field">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крестики Нолики"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/x_o"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginBottom="50px"
        android:textColor="#00FF00"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.tic_tac_toe.DrawView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:id="@+id/game_pole"
        android:backgroundTint="@color/white">

    </com.example.tic_tac_toe.DrawView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_pos"

            android:layout_width="150pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="200px"
            android:layout_marginRight="200px"
            android:gravity="center"
            android:numeric="integer"


            android:backgroundTint="@android:color/background_light"

            android:hint="Введите номер ячейки"
            android:textColor="@color/white"
            android:textColorHint="@color/white"></EditText>




    </LinearLayout>
    <Button
        android:id="@+id/btn_sent_pos_to_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="#ADD8E6"
        android:insetLeft="50px"
        android:insetRight="50px"
        android:text="Отправить"
        android:textColor="@android:color/background_dark"
        app:cornerRadius="50px"></Button>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:backgroundTint="#ff033e"
        android:insetLeft="50px"
        android:insetRight="50px"
        android:text="Вернуться в лобби"
        android:textColor="@android:color/background_dark"
        app:cornerRadius="50px"></Button>

</LinearLayout>